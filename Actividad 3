#include <iostream> // Solicitar biblioteca
#include <string.h> // Solicitar biblioteca

using namespace std;

int main()
{
	string nombre; // Variable de la palabra
	int cantidad; // Variable para guardar la cantidad
	cout << "Este programa lee una palabra o frase dada vuelta" << endl; // Presentacion
	cout << "Ingrese la palabra o frase: "; // Pedirle al usuario que ingrese la palabra o frase
	getline(cin,nombre); // Dato de la frase guardado en variable
	cout << endl; // Separacion
	cantidad = nombre.length(); // Dato guardado de la cantidad de caracteres
	for(int i = 0; i < cantidad; i++) // Sentencia de ciclo
	{
		cout << "-" << nombre.at(i); // Mostrar en pantalla la palabra dada vuelta
	}
	return 0;
}


